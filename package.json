{
  "name": "pgmviewer",
  "displayName": "PgmViewer",
  "publisher": "omeranar1",
  "description": "View P5 (binary) PGM images with zoom, pan, and pixel value display in a custom VSCode editor.",
  "repository": {
    "type": "git",
    "url": "https://github.com/omeranar1/pgmviewer"
  },
  "version": "0.0.8",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pgmviewer.showPgm"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pgmviewer.openPgm",
        "title": "Open PGM Viewer"
      }
    ],
    "customEditors": [
      {
        "viewType": "pgmviewer.pgmEditor",
        "displayName": "PGM Viewer",
        "selector": [
          {
            "filenamePattern": "*.pgm"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "pgm",
        "extensions": [
          ".pgm"
        ],
        "aliases": [
          "PGM"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}